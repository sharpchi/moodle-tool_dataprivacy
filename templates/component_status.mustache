{{!
    @template tool_dataprivacy/component_status

    Data registry main page.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }
}}
<h4 id="{{component}}">{{component}}</h4>
<div>
    {{#compliant}}
    <div class="alert alert-success" role="alert">I am compliant</div>
        <details>
            <summary>Details</summary>
            {{#metadata}}
                <div><strong>{{type}}</strong></div>
                <h5>{{name}}</h5><div> - {{summary}}</div>
                <table class="table">
                    <tbody>
                    {{#fields}}
                        <tr>        
                            <td>{{field_name}}</td>
                            <td>{{field_summary}}</td>
                        </tr>
                    {{/fields}}
                    </tbody>
                </table>
                <hr />
            {{/metadata}}
            {{#nullprovider}}
                <div>{{nullprovider}}</div>
                <hr />
            {{/nullprovider}}
        </details>
    {{/compliant}}
    {{^compliant}}
    <div class="alert alert-danger" role="alert"><strong>NOT compliant</strong></div>
    <hr />
    {{/compliant}}
</div>
